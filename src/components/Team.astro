---
import 'swiper/css';
import 'swiper/css/navigation';
import 'swiper/css/pagination';
import { team } from '../data/team';
---
<section id="team" class="py-20 bg-light relative overflow-hidden">
  <div class="absolute inset-0 opacity-5">
    <img src="https://images.unsplash.com/photo-1604868189743-ec3e9fc6a5b0?auto=format&fit=crop&q=80" 
      alt="Pattern" class="w-full h-full object-cover" />
  </div>
  <div class="container mx-auto px-4 relative">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-4">Tim Kami</h2>
    <p class="text-gray-600 text-center mb-12 max-w-2xl mx-auto font-light">
      Bertemu dengan para mentor dan pembimbing yang akan memandu perjalanan tilawah Anda
    </p>
    
    <div class="swiper team-swiper">
      <div class="swiper-wrapper pb-12">
        {team.map(member => (
          <div class="swiper-slide p-2">
            <div class="bg-white rounded-2xl shadow-lg overflow-hidden transform transition-all duration-300 hover:-translate-y-1 hover:shadow-xl text-center p-6">
              <div class="relative mb-6 mx-auto">
                <div class="w-32 h-32 mx-auto">
                  <img src={member.image} alt={member.name} 
                    class="w-full h-full rounded-full object-cover ring-4 ring-primary/20" />
                </div>
                <div class="absolute -bottom-2 left-1/2 transform -translate-x-1/2">
                  <div class="bg-primary text-dark px-4 py-1 rounded-full text-sm font-medium">
                    Mentor
                  </div>
                </div>
              </div>
              <h3 class="text-xl font-semibold mb-2">{member.name}</h3>
              <p class="text-gray-600 font-light">{member.role}</p>
              <div class="mt-6 flex justify-center space-x-4">
                <a href="#" class="text-gray-400 hover:text-primary transition-colors">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                </a>
                <a href="#" class="text-gray-400 hover:text-primary transition-colors">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
      <div class="swiper-pagination"></div>
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
    </div>
  </div>
</section>

<script>
  import Swiper from 'swiper/bundle';
  
  new Swiper('.team-swiper', {
    slidesPerView: 1,
    spaceBetween: 30,
    autoplay: {
      delay: 3000,
      disableOnInteraction: false,
    },
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },
    breakpoints: {
      640: {
        slidesPerView: 2,
      },
      1024: {
        slidesPerView: 4,
      },
    },
  });
</script>
