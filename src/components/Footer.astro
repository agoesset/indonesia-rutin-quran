          <li><a href="#testimonials" class="text-gray-400 hover:text-primary transition-colors">Testimonial</a></li>
          <li><a href="#products" class="text-gray-400 hover:text-primary transition-colors">Produk</a></li>
          <li><a href="#team" class="text-gray-400 hover:text-primary transition-colors">Tim</a></li>
          <li><a href="#faq" class="text-gray-400 hover:text-primary transition-colors">FAQ</a></li>
